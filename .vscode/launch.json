{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug programu spuštěného přes make run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/ifj2024", // Cesta k spustitelnému souboru
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/build" // Přidej cestu ke sdíleným knihovnám
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Debug DLL4 spuštěného přes make run",
